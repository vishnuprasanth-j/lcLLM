<UserControl x:Class="lcLLM.Windows.AboutWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lcLLM.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="4"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"  Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="About"
               FontSize="25"
               Foreground="White"
               HorizontalAlignment="Left"
               FontWeight="SemiBold"
               Margin="0,0,0,0"/>

                <Path Stroke="White" StrokeThickness="2" 
          Data="M0,10 C5,0 15,20 20,10 
                C25,0 35,20 40,10 
                C45,0 55,20 60,10" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="LcLLM" 
                          Foreground="White" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Margin="0,0,0,5"/>
                <TextBlock Text="LLM coding assistant extension for Visual Studio" 
                          Foreground="#FFA0A0A0" 
                          FontSize="14" 
                          Margin="0,0,0,5"/>
                <TextBlock Text="Created by Vishnu Prasanth" 
                          Foreground="#FFA0A0A0" 
                          FontSize="14" 
                          Margin="0,0,0,10"/>
                <TextBlock Margin="0,5,0,0">
                   <Hyperlink Foreground="#FF4CAF50" 
                              NavigateUri="https://github.com/vishnuprasanth-j">
                       github.com/vishnuprasanth-j
                   </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>

        <Button Grid.Row="2" 
               Content="Close" 
               Style="{StaticResource ModernButton}"
               Width="150"
               Margin="0,15,0,0"
               HorizontalAlignment="Center"
               IsCancel="True"/>
    </Grid>
</UserControl>
