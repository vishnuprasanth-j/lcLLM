<UserControl x:Class="lcLLM.Windows.RefactorSuggestionWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lcLLM.Windows" xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                       CornerRadius="4"
                       Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4A4A4A"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF2C2C2C" Padding="15,0">
            <TextBlock Text="Suggested Code" 
                    FontSize="18" 
                    Foreground="White" 
                    VerticalAlignment="Center" 
                    FontWeight="SemiBold"/>
        </Border>

        <Border Grid.Row="1" 
             Background="#FF2A2A2A" 
             Margin="10" 
             CornerRadius="6" 
             BorderThickness="1" 
             BorderBrush="#FF3A3A3A">
            <avalonEdit:TextEditor x:Name="SuggestionBox"
                 SyntaxHighlighting="C#"
                 ShowLineNumbers="True"
                 IsReadOnly="True"
                 FontFamily="Consolas"
                 FontSize="{Binding ElementName=ZoomSlider, Path=Value}"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 Background="#FFDFDFDF"
                 Margin="10">
            </avalonEdit:TextEditor>
        </Border>

        <Border Grid.Row="2" 
         Background="#FF2A2A2A" 
         Margin="5,0,5,0" 
         CornerRadius="6" 
         BorderThickness="1" 
         BorderBrush="#FF3A3A3A">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Foreground="White" Margin="0,5,0,5" FontWeight="SemiBold" FontSize="12">Follow up</Label>
                <TextBox Grid.Column="1" x:Name="FollowupBox" KeyUp="FollowupBox_KeyUp" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Margin="0,5,0,5"/>
                <Button Grid.Column="2" Content="↓" 
                 x:Name="btnFollowUp"
                 Style="{StaticResource ModernButton}"
                 Width="30"
                 Padding="0"
                 Margin="0,5,0,5"
                 Click="BtnFollowUp_Click" ToolTip="Ask Entwine for a follow-up on code"/>
            </Grid>
        </Border>

        <Grid Grid.Row="3" Background="#FF262626" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                     Orientation="Horizontal" 
                     VerticalAlignment="Center" 
                     Margin="15,0">
                <TextBlock Text="Zoom:" 
                        Foreground="White" 
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0"/>
                <Slider x:Name="ZoomSlider"
                     Minimum="10"
                     Maximum="30"
                     Value="14"
                     Width="200"
                     TickFrequency="1"
                     IsSnapToTickEnabled="True"/>
            </StackPanel>

            <StackPanel Grid.Column="1" 
                     Orientation="Horizontal" 
                     VerticalAlignment="Center" 
                     Margin="0,0,15,0">
                <Button Content="?"
                 Style="{StaticResource ModernButton}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Click="BtnAbout_Click"/>
                <Button Content="Save" 
                     Style="{StaticResource ModernButton}"
                     Width="100"
                     Click="BtnSave_Click"
                     ToolTip="Save code to a new file"/>
                <Button Content="Apply" 
                     Style="{StaticResource ModernButton}"
                     Width="100"
                     Click="BtnApply_Click"
                     ToolTip="Apply code to current selection"/>
                <Button Content="Close" 
                     Style="{StaticResource ModernButton}"
                     Width="100"
                     IsCancel="True"
                     Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
