<UserControl x:Class="lcLLM.Windows.MarkdownViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lcLLM.Windows" xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                              CornerRadius="4"
                              Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF2C2C2C" Padding="15,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Markdown Viewer" 
                         FontSize="18" 
                         Foreground="White" 
                         VerticalAlignment="Center" 
                         FontWeight="SemiBold"
                         Margin="0,0,20,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" x:Name="codeColumn"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                  Background="#FF2A2A2A" 
                  CornerRadius="6" 
                  BorderThickness="1" 
                  BorderBrush="#FF3A3A3A">
                <avalonEdit:TextEditor x:Name="MarkdownEditor"
                  SyntaxHighlighting="Markdown"
                  ShowLineNumbers="True"
                  Foreground="LightGray"
                  FontFamily="Consolas"
                  FontSize="{Binding ElementName=ZoomSlider, Path=Value}"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  Margin="10"
                  Background="Transparent"/>
            </Border>

            <GridSplitter Grid.Column="1" 
                        Width="5" 
                        HorizontalAlignment="Stretch"
                        Background="#FF3A3A3A"/>

            <Border Grid.Column="2" 
                  Background="#FF2A2A2A" 
                  CornerRadius="6" 
                  BorderThickness="1" 
                  BorderBrush="#FF3A3A3A">
                <WebBrowser x:Name="MarkdownPreview" 
                          Margin="10"/>
            </Border>
        </Grid>

        <Border Grid.Row="2" 
          Background="#FF2A2A2A" 
          Margin="5,0,5,0" 
          CornerRadius="6" 
          BorderThickness="1" 
          BorderBrush="#FF3A3A3A">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Foreground="White" Margin="0,5,0,5" FontSize="12" FontWeight="SemiBold">Follow up</Label>
                <TextBox Grid.Column="1" x:Name="FollowupBox" KeyUp="FollowupBox_KeyUp" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Margin="0,5,0,5"/>
                <Button Grid.Column="2" Content="↓" 
                  x:Name="btnFollowUp"
                  Style="{StaticResource ModernButton}"
                  Width="30"
                  Padding="0"
                  Margin="0,5,0,5"
                  Click="BtnFollowUp_Click" ToolTip="Ask Entwine for a follow-up on code"/>
            </Grid>
        </Border>

        <Grid Grid.Row="3" Background="#FF262626" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                      Orientation="Horizontal" 
                      VerticalAlignment="Center" 
                      Margin="15,0">
                <Button Content="[ ]" 
                      Style="{StaticResource ModernButton}"
                      Width="40"
                      Click="BtnCollapse_Click"/>
                <TextBlock Text="Zoom:" 
                         Foreground="White" 
                         VerticalAlignment="Center" 
                         Margin="0,0,10,0"/>
                <Slider x:Name="ZoomSlider"
                      Minimum="10"
                      Maximum="30"
                      Value="14"
                      Width="200"
                      TickFrequency="1"
                      IsSnapToTickEnabled="True"
                      VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" 
                      Orientation="Horizontal" 
                      VerticalAlignment="Center" 
                      Margin="0,0,15,0">
                <Button Content="Save" 
                      Style="{StaticResource ModernButton}"
                      Width="100"
                      Click="BtnSave_Click"/>
                <Button Content="Export" 
                      Style="{StaticResource ModernButton}"
                      Width="100"
                      Click="BtnExport_Click"/>
                <Button Content="Close" 
                      Style="{StaticResource ModernButton}"
                      Width="100"
                      IsCancel="True"
                      Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
